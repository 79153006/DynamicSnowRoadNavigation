<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="jp.ac.hokudai.isdl.ryohei_ichii.dynamicsnowroadnavigation.Front">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
    ></LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
    >
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="160"
        >

            <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/infobar"
                    android:background="@color/colorBackground"
                    android:id="@+id/infobar"
                    android:layout_weight="2"
            />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
            >
                <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/homebutton"
                        android:background="@color/colorBackground"
                        android:id="@+id/homebutton"
                        android:layout_weight="1"
                />
                <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/preferencebutton"
                        android:background="@color/colorBackground"
                        android:id="@+id/preferencebutton"
                        android:layout_weight="1"
                />
                <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/warningbar"
                        android:background="@color/colorBackground"
                        android:id="@+id/warningbar"
                        android:layout_weight="1"
                />
            </>


        </LinearLayout>
        <android.support.v7.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/startbutton"
                android:background="@color/colorBackground"
                android:id="@+id/startbutton"
                android:layout_weight="25"
        />
    </LinearLayout>


</LinearLayout>
