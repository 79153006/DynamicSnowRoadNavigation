<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="jp.ac.hokudai.isdl.ryohei_ichii.dynamicsnowroadnavigation.Front">
    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
    >
        <android.support.v7.widget.AppCompatImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/logo_run"
                android:scaleType="fitCenter"
                android:background="@drawable/color_alizarin"
                android:layout_margin="@dimen/front_button_margin"
                android:id="@+id/button_run"
        />
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/logo_MAP"
            android:scaleType="fitCenter"
            android:background="@drawable/color_emerald"
            android:layout_margin="@dimen/front_button_margin"
            android:id="@+id/button_map"
    />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
        >
            <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_info"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/color_peterriver"
                    android:layout_margin="@dimen/front_button_margin"
                    android:id="@+id/button_info"
            />
            <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo_preference"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:background="@drawable/color_concrete"
                    android:layout_margin="@dimen/front_button_margin"
                    android:id="@+id/button_preference"
            />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

